<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkGrey"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/activity"
        android:layout_alignParentTop="true"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="28dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Start Time"
            android:textColor="@color/white"
            android:id="@+id/textView16"
            android:layout_alignTop="@+id/hoursStart"
            android:layout_toLeftOf="@+id/hoursStart"
            android:layout_toStartOf="@+id/hoursStart"
            android:layout_marginTop="45dp"/>


        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:id="@+id/startTime"
            android:inputType="time"
            android:layout_marginTop="45dp"
            android:textColor="@color/white"
            android:ems="3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="End Time"
            android:id="@+id/textView17"
            android:layout_below="@+id/hoursStart"
            android:layout_alignLeft="@+id/textView16"
            android:layout_alignStart="@+id/textView16"
            android:layout_gravity="center_vertical" />
        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/endTime"
            android:textColor="@color/white"
            android:layout_below="@+id/hoursStart"
            android:layout_alignRight="@+id/textView14"
            android:layout_alignEnd="@+id/textView14"
            android:layout_gravity="center"
            android:nextFocusForward="@+id/minutesStart"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            android:id="@+id/frequencyText"
            android:textColor="@color/white"
            android:text="Frequency"/>

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/endTime"
            android:textColor="@color/white"
            android:layout_alignRight="@+id/frequencyText"
            android:id="@+id/frequency"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_gravity="center"
            android:text="delete actvity"
            android:id="@+id/delete"

            android:gravity="center"
            android:layout_width="150dp"
            android:background="@color/colorGreen"
            android:layout_height="36dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="completed"
            android:layout_centerInParent="true"
            android:layout_width="150dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:background="@color/colorGreen"
            android:id="@+id/completed"
            android:layout_height="36dp"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>